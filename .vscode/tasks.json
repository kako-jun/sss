{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ui:dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      }
    },
    {
      "label": "tauri:dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "tauri:dev"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      }
    },
    {
      "label": "tauri:build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "tauri:build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "build:frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "build:rust",
      "type": "shell",
      "command": "cargo",
      "args": ["build", "--manifest-path=./src-tauri/Cargo.toml"],
      "group": "build",
      "problemMatcher": ["$rustc"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "build:rust-release",
      "type": "shell",
      "command": "cargo",
      "args": ["build", "--release", "--manifest-path=./src-tauri/Cargo.toml"],
      "group": "build",
      "problemMatcher": ["$rustc"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
